# Poll every 10 seconds
set daemon 10

# Monitor the server's PID file and check its public interfaces.
check process homestead-prov pidfile /var/run/homestead-prov.pid
  start program = "/etc/monit/run_logged /etc/init.d/homestead-prov start"
  stop program = "/etc/monit/run_logged /etc/init.d/homestead-prov stop"
check program poll_homestead_prov with path "/usr/share/clearwater/bin/poll_homestead_prov.sh"
  if status != 0 for 2 cycles then exec "/etc/init.d/homestead-prov abort-restart"
